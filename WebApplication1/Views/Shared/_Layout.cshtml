<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - WebApplication1</title>
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	@if (Context.Request.Host.Host == "localhost")
	{
		<link rel="stylesheet" href="/scripts/styles/tailwind.css" />
	}
	else
	{
		<link rel="stylesheet" href="~/dist/styles/tailwind.css" asp-append-version="true" />
	}
</head>
<body class="min-h-screen flex flex-col">
	<header class="bg-white shadow-sm border-b mb-3">
		<nav class="container mx-auto px-4">
			<div class="flex items-center justify-between h-16">
				<a class="text-xl font-semibold text-gray-800 hover:text-gray-600" asp-area="" asp-controller="Home" asp-action="Index">WebApplication1</a>
				<div class="flex gap-6">
					<a class="text-gray-700 hover:text-gray-900" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
					<a class="text-gray-700 hover:text-gray-900" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
				</div>
			</div>
		</nav>
	</header>
	<div class="container mx-auto px-4 flex-grow">
		<main class="pb-3">
			<app-root></app-root>
			@RenderBody()
		</main>
	</div>

	<footer class="border-t mt-auto">
		<div class="container mx-auto px-4 py-4 text-gray-600 text-center">
			&copy; @DateTime.Now.Year - WebApplication1 - <a class="text-blue-500 hover:text-blue-700" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>

	<script>
		window.__XCONS_LOGGER_CONFIG__ = {
			'@xcons/widget': {
				enabled: true,
				level: 1,  // WARN level (0=ERROR, 1=WARN, 2=INFO, 3=DEBUG, 4=TRACE)
				prefix: 'WIDGET',
				timestamp: true,
				colors: true
			}
		};
	</script>

	<script type="module" src="/scripts/app.bootstrap.ts"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>